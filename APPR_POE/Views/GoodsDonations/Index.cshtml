@model IEnumerable<APPR_POE.Models.GoodsDonation>

@{
    ViewData["Title"] = "Donations";
}

<div id="div_GoodsDonos">
    <label class="h1">
        Goods Donations
    </label>
    <div id="div_top">
        <center>
            <table id="table_nav">
                <tr>
                    <td>
                        <a asp-controller="MoneyDonations" asp-action="Index">MONEY</a>
                    </td>
                    <td>
                        <a class="active">GOODS</a>
                    </td>
                </tr>
            </table>
        </center>
        <table id="table_head">
            <thead>
                <tr>
                    <td style="width: 10%;">
                        Date
                    </td>
                    <td style="width: 20%;">
                        Donor
                    </td>
                    <td style="width: 8%;">
                        Quantity
                    </td>
                    <td style="width: 22%;">
                        Category
                    </td>
                    <td style="width: 40%;">
                        Description
                    </td>
                </tr>
            </thead>
        </table>
    </div>
    <div id="div_bottom">
        <table id="table_body">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 10%;">
                            <label>@item.date.ToShortDateString()</label>
                        </td>
                        <td style="width: 20%;">
                            @if (item.anonymous == true)
                            {
                                <label>Anonymous</label>
                            }
                            else
                            {
                                <label>@item.email</label>
                            }
                        </td>
                        <td style="width: 8%;">
                            @item.quantity
                        </td>
                        <td style="width: 22%;">
                            @item.category
                            @*<form method="post" asp-action="Details" asp-route-id="@item.id" id="form_details">
                        <button class="btn btn-primary">
                        <i class="bi bi-info-circle"></i> Details
                        </button>
                        </form>*@
                        </td>
                        <td style="width: 40%;">
                            @if (item.description.Length < 60)
                            {
                                <label>
                                    @item.description
                                </label>
                            }
                            else
                            {
                                <label>
                                    @item.description.Substring(0, 56)
                                    ...
                                </label>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    #div_GoodsDonos {
        height: 100%;
        margin: auto;
        padding: 2%;
        color: white;
    }

    #div_GoodsDonos {
        background: rgba( 0, 0, 0, 0.3 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 10px );
        -webkit-backdrop-filter: blur( 10px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

    #div_top {
        width: 100%;
    }

    #table_nav {
        width: 100%;
        margin-bottom: 2%;
    }

    #table_nav {
        background: rgba( 74, 74, 74, 0.3 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 10px );
        -webkit-backdrop-filter: blur( 10px );
        border-radius: 10px;
        border: 0px solid rgba( 255, 255, 255, 0.18 );
        overflow: hidden !important;
    }

        #table_nav td {
            width: 33%;
            text-align: center;
        }

            #table_nav td a {
                color: white;
                text-decoration: none;
                font-size: 20px;
                display: block;
                width: 100%;
                padding: 2%;
            }

                #table_nav td a:hover {
                    background: rgba( 102, 0, 255, 0.3 ) !important;
                }

        #table_nav .active {
            background: rgba( 102, 0, 255, 0.7 ) !important;
        }

    #table_head {
        width: 100%;
        border-radius: 15px 15px 0 0;
        overflow: hidden;
    }

        #table_head thead {
            color: white;
            background-color: #6600FF;
            font-weight: bold;
        }

        #table_head tr {
        }

        #table_head td {
            padding: 1%;
            padding-top: 2%;
            padding-bottom: 2%;
        }

    #div_bottom {
        width: 100%;
        border-radius: 0px 0px 15px 15px !important;
        max-height: 55vh;
        overflow-x: hidden;
        overflow-y: auto;
    }

    #table_body {
        width: 100%;
    }

        #table_body tbody {
        }

        #table_body tr:nth-child(even) {
            background: rgba( 74, 74, 74, 0.3 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 10px );
            -webkit-backdrop-filter: blur( 10px );
            border-radius: 10px;
            /*border: 1px solid rgba( 255, 255, 255, 0.18 );*/
        }

        #table_body tr:nth-child(odd) {
            background: rgba( 155, 155, 155, 0.3 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 10px );
            -webkit-backdrop-filter: blur( 10px );
            border-radius: 10px;
            /*border: 1px solid rgba( 255, 255, 255, 0.18 );*/
        }

        #table_body td {
            padding: 1%;
        }

            #table_body td a {
                width: 45%;
            }

    #form_details {
        width: 100%;
    }

        #form_details button {
            width: 50%;
        }
</style>